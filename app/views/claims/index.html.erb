<style>
  .app-task-list {
    list-style-type: none;
    padding-left: 0;
    margin-top: 0;
    margin-bottom: 0;
    @include govuk-media-query($from: tablet) {
      min-width: 550px;
    }
  }

  .app-task-list__section {
    display: table;
    @include govuk-font($size:24, $weight: bold);
  }

  .app-task-list__section-number {
    display: table-cell;

    @include govuk-media-query($from: tablet) {
      min-width: govuk-spacing(6);
      padding-right: 0;
    }
  }

  .app-task-list__items {
    @include govuk-font($size: 19);
    @include govuk-responsive-margin(9, "bottom");
    list-style: none;
    padding-left: 0;
    @include govuk-media-query($from: tablet) {
      padding-left: govuk-spacing(6);
    }
  }

  .app-task-list__item {
    border-bottom: 1px solid $govuk-border-colour;
    margin-bottom: 0 !important;
    padding-top: govuk-spacing(2);
    padding-bottom: govuk-spacing(2);
    @include govuk-clearfix;
  }

  .govuk-button {
    margin: 10px;
  }
</style>

<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t('.heading') %></h1>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= button_to applications_path, class: "govuk-button govuk-button--start" do %>
      <%= t('.start_claim') %>
      <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
      </svg>
    <% end %>
  </div>

</div>

<div class="govuk-!-padding-top-8"></div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <table class="govuk-table" data-module="moj-sortable-table">
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th scope="col" class="govuk-table__header" aria-sort="ascending"><%= t('.header.name') %></th>
          <th scope="col" class="govuk-table__header" aria-sort="none"><%= t('.header.start_date') %></th>
          <th scope="col" class="govuk-table__header" aria-sort="none"><%= t('.header.laa_reference') %></th>
          <th scope="col" class="govuk-table__header" aria-sort="none"><%= t('.header.status') %></th>
          <th scope="col" class="govuk-table__header" aria-sort="none"><%= t('.header.actions') %></th>
        </tr>
      </thead>

      <tbody class="govuk-table__body app-task-list__items">
        <% @claims.each do |claim| %>
          <tr class="govuk-table__row app-task-list__item">
            <% if claim.status == 'completed' %>
              <td class="govuk-table__cell">
                <a href="/application_certificate/<%= application.id %>"><%= claim.id %></a>
              </td>
            <% else %>
              <td class="govuk-table__cell">
                <%= link_to claim.short_id, steps_start_page_path(claim.id) %>
              </td>
            <% end %>
            <td class="govuk-table__cell"><%= claim.date %></td>
            <td class="govuk-table__cell"><%= claim.laa_reference %></td>
            <td class="govuk-table__cell">
              <strong class="govuk-tag <%= t(".status_colour.#{claim.status}") %>">
                <%= t(".status.#{claim.status}") %>
              </strong>
            </td>
            <td class="govuk-table__cell">
              <a href="/confirm_delete?id=<%= claim.id %>&name=<%= claim.office_code %>&laa_reference=<%=  claim.laa_reference %>" class="govuk-button govuk-button--secondary">Delete</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @claims %>
  </div>
</div>
