<% content_for?(:page_title) ? yield(:page_title) : assess_fallback_title %>

<% content_for(:head) do %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
<% end %>

<% content_for(:analytics) do %>
  <%= render partial: 'layouts/assess/analytics' %>
<% end %>

<% content_for(:cookie_banner) do %>
  <% render partial: 'layouts/assess/cookie_banner/main', locals: { cookies_preferences_set: @cookie_preferences_set } %>
<% end %>

<% content_for(:service_name) do %>
  <%= link_to assess_service_name, user_signed_in? ? main_app.assess_claims_path : main_app.assess_root_path,
              class: 'govuk-header__link govuk-header__service-name', id: 'header-service-name' %>
<% end %>

<% content_for(:header_navigation) do %>
  <% render partial: 'layouts/assess/header_navigation' %>
<% end %>

<% content_for(:phase_banner) do %>
  <% render partial: 'layouts/assess/phase_banner' %>
<% end %>

<% content_for(:primary_navigation) do %>
  <% render partial: 'layouts/assess/primary_navigation' %>
<% end %>

<% content_for(:content) do %>
  <%= yield %>
<% end %>

<% content_for(:footer_links) do %>
  <% render partial: 'layouts/assess/footer_links' %>
<% end %>

<%# render partial: 'layouts/assess/developer_tools' if FeatureFlags.developer_tools.enabled? %>

<%= render template: 'layouts/assess_govuk_template', layout: false %>
