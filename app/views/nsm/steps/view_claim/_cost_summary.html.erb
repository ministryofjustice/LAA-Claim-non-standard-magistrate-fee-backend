<%=
  head = section.headers
  rows = section.table_fields.map(&:values)
  foot = section.summed_fields.values

  if section.show_card
    govuk_summary_card(
          title: section.title,
          actions: [],
      ) do |card|
        govuk_table(first_cell_is_header: true, head:, rows:, foot:)
    end
  else
    govuk_table(first_cell_is_header: true, head:, rows:, foot:)
  end
%>

