<% title t('.page_title') %>
<% step_header(path: applications_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-thirds">
    <h1 class="govuk-heading-l"><%= t('.heading') %></h1>
    <h2 class="govuk-hint govuk-!-font-size-24"><%= t('.estimate') %></h2>
    <div class="govuk-heading-l"><%= @report.total_cost %></div>

    <% @report.sections.each do |section| %>
      <%= govuk_summary_list(**section) %>
    <% end %>

    <div class="govuk-button-group">
      <%= link_to edit_steps_other_info_path(current_application), class: "govuk-button", data_module: "govuk-button", data_prevent_double_click: "true" do %>
        Save and continue
      <% end %>
      <%= link_to after_commit_path(current_application), class: "govuk-button govuk-button--secondary", data_module: "govuk-button", data_prevent_double_click: "true" do %>
        Save and come back later
      <% end %>
    </div>
  </div>
</div>
