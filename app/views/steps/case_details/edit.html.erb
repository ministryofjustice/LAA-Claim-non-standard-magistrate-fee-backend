<% title t('.page_title') %>
<% step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary(@form_object) %>
    <h1 class="govuk-heading-xl"><%= t('.heading') %></h1>
    <%= step_form @form_object do |f| %>
      <%= f.govuk_collection_select :main_offence, MainOffence.all, :id, :name,
                              data: { module: 'accessible-autocomplete' }, width: 20,
                              options: { include_blank: true }, label: { size: 'm' } %>

      <%= f.govuk_date_field :main_offence_date, maxlength_enabled: true, legend: { size: 's' } %>

      <% @form_object.boolean_fields.each do |field| %>
        <%= f.govuk_radio_buttons_fieldset field, legend: { size: 's' } do %>
          <%= f.govuk_radio_button field, YesNoAnswer::YES.to_s %>
          <%= f.govuk_radio_button field, YesNoAnswer::NO.to_s %>
        <% end%>
      <% end%>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
