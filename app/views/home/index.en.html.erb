<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <%#= render partial: 'shared/flash_banner' %>

    <h1 class="govuk-heading-xl">
      <%= service_name %>
    </h1>

    <p class="govuk-body">
    <%= t('.instruction') %>
    </p>

    <h3 class="govuk-heading-m">
      <%= t('.section.title')%>
    </h3>

    <ul class="govuk-list">
      <li>
      <%= link_to t('.section.link.CCCD.name'), "https://claim-crown-court-defence.service.gov.uk/",
                  class: 'govuk-link',
                  role: 'link',
                  target: '_blank' %>, <%= t('.section.link.CCCD.content') %>
      </li>
      <li>
      <%= link_to t('.section.link.CWA.name'), "https://portal.legalservices.gov.uk/",
                  class: 'govuk-link',
                  role: 'link',
                  target: '_blank' %>, <%= t('.section.link.CWA.content') %>
      </li>
    </ul>

    <% if Rails.env.development? %>
      <%= link_button nil, provider_saml_omniauth_callback_path, class: 'govuk-button--start govuk-!-margin-top-4' do %>
        Login to Warden (with mocks - dev only)
        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
          <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
        </svg>
      <% end %>
      <br>
    <% end %>


    <!-- NOTE: temporarily until we implement LAA Portal Login, this button goes to the dashboard-->
    <%= link_button nil, applications_path, class: 'govuk-button--start govuk-!-margin-top-4' do %>
      Start now
      <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
      </svg>
    <% end %>
  </div>
</div>
