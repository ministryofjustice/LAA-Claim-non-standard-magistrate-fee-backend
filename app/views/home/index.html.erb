<% title  t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= t('.page_title') %>
    </h1>

    <% if @notification_banner %>
      <%= govuk_notification_banner(title_text: t(".notifications.title"), text: @notification_banner) %>
    <% end %>

    <p>
      <%= t('.introduction_html', eforms_link: link_to(t('.eforms'), "https://portal.legalservices.gov.uk/")) %>
    </p>
    <% if @gatekeeper.provider_enrolled?(service: Providers::Gatekeeper::PAA) %>
      <h2 class="govuk-heading-s">
        <%= link_to t('.pa_header'), prior_authority_applications_path, class: "govuk-link--no-visited-state" %>
      </h2>
      <p>
        <%= t('.pa_text') %>
      </p>
    <% end %>
    <% if @gatekeeper.provider_enrolled?(service: Providers::Gatekeeper::EOL) %>
      <h2 class="govuk-heading-s">
        <%= link_to t('.eol_header'), ENV['EOL_URL'], class: "govuk-link--no-visited-state" %>
      </h2>
      <p>
        <%= t('.eol_text') %>
      </p>
    <% end %>
    <% if @gatekeeper.provider_enrolled?(service: Providers::Gatekeeper::NSM) %>
      <h2 class="govuk-heading-s">
        <%= link_to t('.nsm_header'), nsm_applications_path, class: "govuk-link--no-visited-state" %>
      </h2>
      <p>
        <%= t('.nsm_text') %>
      </p>
    <% end %>
  </div>
</div>
