<% title t('.page_title') %>
<% decision_step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary(@form_object) %>
    <span class="govuk-caption-xl"><%= t(".caption") %></span>
    <h1 class="govuk-heading-xl"><%= t(".page_title") %></h1>

    <%= step_form @form_object do |form| %>
      <%= form.govuk_text_field :main_offence, label: { text: t(".main_offence"), size: 's' }, hint: { text: t(".main_offence_hint") } %>
      <%= form.govuk_date_field :rep_order_date, legend: { text: t(".rep_order_date"), size: 's' }, hint: { text: t(".rep_order_date_hint") } %>
      <%= form.govuk_text_field :client_maat_number, width: 10, label: { text: t('.client_maat_number'), size: 's' } %>

      <%= form.govuk_radio_buttons_fieldset :client_detained, legend: { text: t('.client_detained'), size: 's' } do %>
        <%= form.govuk_radio_button :client_detained, true, label: { text: t('generic.yes') }, link_errors: true do %>
            <%= form.govuk_text_field :client_detained_prison,
                                      label: { text: t('.client_detained_prison'), size: 's' },
                                      hint: { text: t('.client_detained_prison_hint') } %>
        <% end %>
        <%= form.govuk_radio_button :client_detained, false, label: { text: t('generic.no') } %>
      <% end%>

      <%= form.govuk_collection_radio_buttons(
            :subject_to_poca,
            YesNoAnswer.radio_options,
            :value,
            :label,
            legend: { text: t('.subject_to_poca'), size: 's' }
          ) %>

      <%= form.continue_button %>
    <% end %>
  </div>
</div>
