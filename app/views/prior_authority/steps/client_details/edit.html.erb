<% title t('.page_title') %>
<% decision_step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary(@form_object) %>
    <h1 class="govuk-heading-xl"><%= t('.heading') %></h1>
    <%= step_form @form_object do |f| %>
      <%= f.govuk_text_field :client_first_name, label:{ size: 's'}, min: 1, step: 1, width: 3 %>
      <%= f.govuk_text_field :client_last_name, label:{ size: 's'}, min: 1, step: 1, width: 3 %>
      <%= f.govuk_date_field :client_date_of_birth, label:{ size: 's'}, min: 1, step: 1, width: 3 %>
      <%= f.continue_button %>
    <% end %>
  </div>
</div>
