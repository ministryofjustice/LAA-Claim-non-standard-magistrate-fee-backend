<% title t('.page_title') %>
<% decision_step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t(".page_title") %></h1>
    <%= render 'prior_authority/steps/additional_costs/cost_summary', additional_cost: @form_object, links: false %>
    <div class="govuk-button-group">
      <%= govuk_button_to(t('.yes_delete'), prior_authority_steps_additional_cost_detail_path(current_application, @form_object.id), warning: true, method: :delete) %>
      <%= govuk_button_to(t('.no_delete'), prior_authority_steps_additional_costs_path, method: :get) %>
    </div>
