<%= form.govuk_period_field :period, legend: -> { tag.label(t('.period'), class: "govuk-label govuk-label--#{size}") } %>
<%= form.govuk_text_field :cost_per_hour,
                          width: 5,
                          prefix_text: "&pound;".html_safe,
                          inputmode: "decimal",
                          value: number_with_precision(@form_object.cost_per_hour, precision: 2),
                          label: { text: t('.cost_per_hour'), size: size } %>
