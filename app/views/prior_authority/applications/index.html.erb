<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl"><%= t('.page_title') %></h1>
  </div>
</div>

<% if @empty %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p class="govuk-text"><%= t('.none') %></p>
    </div>
  </div>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_button_to t('.start_application'), prior_authority_applications_path %>
  </div>
</div>

<% unless @empty %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <div class="govuk-tabs" data-module="govuk-tabs">
        <ul class="govuk-tabs__list">
          <li class="govuk-tabs__list-item <%= 'govuk-tabs__list-item--selected' if @scope == :reviewed %>">
            <%= link_to t(".tabs.reviewed"), reviewed_prior_authority_applications_path(anchor: 'claim_nav') %>
          </li>
          <li class="govuk-tabs__list-item <%= 'govuk-tabs__list-item--selected' if @scope == :submitted %>">
            <%= link_to t(".tabs.submitted"), submitted_prior_authority_applications_path(anchor: 'claim_nav') %>
          </li>
          <li class="govuk-tabs__list-item <%= 'govuk-tabs__list-item--selected' if @scope == :drafts %>">
            <%= link_to t(".tabs.drafts"), draft_prior_authority_applications_path(anchor: 'claim_nav')%>
          </li>
        </ul>

        <div class="govuk-tabs__panel">
          <%= render partial: "prior_authority/applications/#{@scope}", locals: { model: @model, pagy: @pagy } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
